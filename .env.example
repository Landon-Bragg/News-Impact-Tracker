# Copy to .env and edit as necessary
KAFKA_BROKER=localhost:9092
KAFKA_TOPIC_NEWS=news_headlines
KAFKA_TOPIC_PRICES=price_ticks
KAFKA_TOPIC_IMPACT=impact_scores

# Symbols to track (comma-separated)
SYMBOLS=AAPL,MSFT,GOOGL,AMZN,TSLA,NVDA

# Optional Postgres (not required for quickstart)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=impactdb
POSTGRES_USER=impactuser
POSTGRES_PASSWORD=impactpass

# News sources (RSS) - leave blank to use defaults in rss_feeds.yml
NEWSAPI_KEY=

# Price producer data source: simulate | yfinance
PRICE_DATA_SOURCE=simulate
PRICE_SIM_SPEED=1.0  # 1.0=real-time; <1 slower, >1 faster playback
